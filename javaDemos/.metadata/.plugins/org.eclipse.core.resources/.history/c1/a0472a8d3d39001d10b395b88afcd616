package vowels;

public class main {

	public static void main(String[] args) {
		// vowels = sesli harfler
		
char harf = 'B';
		
		switch (harf) {
			case 'A':
			case 'a':
			case 'I':
			case 'ı':
			case 'O':
			case 'o':
			case 'U':
			case 'u':
				System.out.println(harf+" kalın sesli harftir.");
				break;
			case 'E':
			case 'e':
			case 'İ':
			case 'i':
			case 'Ö':
			case 'ö':
			case 'Ü':
			case 'ü':
				System.out.println(harf+" ince sesli harftir.");
				break;

			default:
				System.out.println(harf+" sesli harf değildir.");
				break;
			}
	}


}
