package perfectNumber;

public class main {

	public static void main(String[] args) {
		
		// mükemmel sayi : kendinden başka tüm pozitif bölenlerinin toplamı kendisine eşit olan sayidir.

		int number = 13;
		int total = 0;
		
		
		for(int i=1; i<number; i++) {
			if(number % i == 0) {
				total = total + i;
			}
		}
		
		if(total == number) {
			System.out.println("The perfect number");
		}else {
			System.out.println("Not the perfect number");
		}
	}

}
